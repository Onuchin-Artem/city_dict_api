* { margin: 0; padding: 0; outline: 0; }

body, html { height: 100%; }

body {
	font-size: 16px;
	line-height: 22px;
	font-family: arial, sans-serif;
	color: #828282;
	background: #FFFFFF repeat 0 0;
}

a { color: #067aa7; text-decoration: none; cursor: pointer; }
a:hover { text-decoration: underline; }
a img { border: 0; }
a.about{ text-decoration: underline; font-size: 20px; }

article, aside, details, footer, header, menu, nav, section { display: block; }
input, textarea, select { font-size: 12px; font-family: arial, sans-serif; }
textarea { overflow: auto; }

.cl { display: block; height: 0; font-size: 0; line-height: 0; text-indent: -4000px; clear: both; }
.notext { font-size: 0; line-height: 0; text-indent: -4000px; }
.left, .alignleft { float: left; display: inline; }
.right, .alignright { float: right; display: inline; }

.shell  { width: 80%; margin: 0 auto; }

#header { background: url(<%= asset_path "header.png" %>) repeat-x 0 0;  }
#header .logo {font-size: 32px; line-height:32px;color: #fff; padding:19px 0px;display: inline-block;font-family: "OfficinaSansC", Arial, sans-serif;}
#header .logo:hover {text-decoration: none}

.main { padding:0px; position: relative; height: 100%; padding-bottom: 20px }
.main h2 { font-size: 28px; color: #2d2d2d; padding-top: 20px; line-height: 28px; font-family: "OfficinaSansC", Arial, sans-serif; font-weight: 500; padding-bottom: 12px; }
.main h2 .top {font-family: "OfficinaSansC", Arial, sans-serif; font-size:18px;float:right; line-height: 22px;border-bottom: 1px dashed #067AA7; text-decoration: none}
.main h3 { font-size: 18px; color: #2d2d2d; line-height: 22px; font-family: Arial, sans-serif; font-weight: 500; padding-bottom: 8px; }
.main #menu-main a {
    font-size: 18px; display: block; line-height: 22px; font-family: "OfficinaSansC", Arial, sans-serif; font-weight: 500; padding-bottom: 8px;
}

html, body { height: 100%; }
#wrapper {width: 100%}
#footer { border-top: 1px solid #fff; position: relative; height:54px; line-height:54px;background: #b3dce6; }

@font-face {
    font-family: OfficinaSansC;
    src: url(OfficinaSansC-Book.ttf);
}


pre {
    white-space: pre-wrap;
    background: #FDF6E3;
}

code {
    background: #FDF6E3;
}
